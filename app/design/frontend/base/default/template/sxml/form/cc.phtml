                <?php
                $iSurchargeEnabled = Mage::getStoreConfig('surcharge/fooman_surcharge_cc/enableccsurcharge', Mage::app()->getStore()->getStoreId());
              
                if ($iSurchargeEnabled == 1) {
                    ?>
